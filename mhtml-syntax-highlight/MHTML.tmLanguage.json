{
    "name": "MHTML",
    "scopeName": "source.mhtml",
    "fileTypes": ["mhtml"],
    "patterns": [
        {
            "name": "keyword.control.mhtml",
            "match": "@[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
            "name": "entity.other.attribute-name.class.mhtml",
            "match": "\\.[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
            "name": "entity.other.attribute-name.id.mhtml",
            "match": "#[a-zA-Z_][a-zA-Z0-9_-]*"
        },
        {
            "name": "variable.other.mhtml",
            "match": "[a-zA-Z_][a-zA-Z0-9_-]*:"
        },
        {
            "name": "string.quoted.mhtml",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "punctuation.section.brace.mhtml",
            "match": "[{}]"
        },
        {
            "name": "comment.line.mhtml",
            "match": "//.*$"
        }
    ]
}

